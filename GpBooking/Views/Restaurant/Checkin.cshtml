@model GpBooking.Models.RestaurantReservations
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section title
{
    Check in
}
<div>
    <h4>Restaurant Table</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Restaurant
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.Name)
        </dd>
        <dt>
            Restaurant Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.Address)
        </dd>
        <dt>
            Restaurant Tel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.Tel1)
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
           Number Of Table
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberOfTable)
        </dd>
        <dt>
            PaymentType
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
        @using (Html.BeginForm("Checkin", "Restaurant", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input data-val="true" data-val-number="The field Id must be a number." data-val-required="The Id field is required." id="Id" name="CheckId" type="hidden" value="@Model.Id">
            <div class="container-login100-form-btn">
                <input type="submit" value="Check-In" class="login100-form-btn" />
            </div>
        }
    </dl>
</div>