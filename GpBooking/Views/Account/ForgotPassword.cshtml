@model GpBooking.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section title
{
    Forgot Password
}

@using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w", role = "form" }))
{
    <span class="login100-form-title p-b-32">
        Account Login
    </span>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <span class="txt1 p-b-11">
        Email
    </span>
    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
        @Html.TextBoxFor(m => m.Email, new { @class = "input100" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <span class="focus-input100"></span>
    </div>
    
    <div class="container-login100-form-btn">
        <input type="submit" value="Forget Password" class="login100-form-btn" />
    </div>
}
